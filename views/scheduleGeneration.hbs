<!DOCTYPE html>

<html>

<head>
  {{> globalHead }}
  <script src="js/scheduleGeneration.js"></script>
  <script src="js/util.js"></script>
  <link rel="stylesheet" type="text/css" href="css/scheduleGeneration.css" />
</head>

<body>
  <!-- Nav Bar -->
  {{> navbar}}

    <div id="alertContainer"></div>

    <div id="scheduleNotGenerating" class="no-display">
        <button onclick="generateSchedule()" class="success button">Generate Schedule</button>
    </div>

    <div id="scheduleGenerating" class="no-display">
        <p>Schedule is already generating...</p>
        <p id="status"></p>
    </div>

