        <p>Schedule created!</p>

        <select id="previewSolutionSelect"></select>
        
        <div id="previewSolutionTableContainer">
          <table id="previewSolutionTable">
          </table>
        </div>


        <button onclick="generateSchedule()" class="success button">Generate New Schedule</button>
    </div>

    <script>ready()</script>
    <script>statusChecker()</script>
    
  {{> footer}}
