<!DOCTYPE html>
<html>

<head>
  {{> globalHead }}
  
  <script src = "https://unpkg.com/validator@latest/validator.min.js"></script>
  <script src = "js/editPreference.js"></script>
  <title>Edit Preferences</title>
</head>

<body>
  <!-- NAVBAR START -->
  {{> navbar}}
  <!-- NAVBAR END <select type="text" name="profId" id="profSelect" />-->
  <div>
    <label class="tab">Select A Professor To Edit</label>
    <select class="tab" id="profSelect" name='profId'
     onchange="getProfID()"></select>
  </div>
  <div class="buttons">
    <a href="/canTeach"><button type="button" class="but"
     onclick="getProfID()">Edit Can Teach</button></a>
    <a href="/preferTeach"><button type="button" class="but"
     onclick="getProfID()">Edit Prefer To Teach</button></a>
    <a href="/timeOfDay"><button type="button" class="but"
     onclick="getProfID()">Edit Time Of Day</button></a>
    <a href="/dayOfWeek"><button type="button" class="but"
     onclick="getProfID()">Edit Day Of Week</button></a>
    <a href="/timeSlot"><button type="button" class="but"
     onclick="getProfID()">Edit Timeslot</button></a>
  </div>
        

  <!-- Run scripts on page load -->
  <script>
    fetchProfessors();
    getProfID();
  </script>
  <div id = "alertContainer"></div>
  <style>
    .tab{
      margin-left: 35%;
      width: 30%;
    }
    .buttons {
      display: flex;
      justify-content: center;
    }
    .but{
      background-color: green;
      width: 200px;
      padding: 10px;
      margin: 5px;
      display: inline;}
    }

  </style>
 </body>
  {{> footer}}
</html>